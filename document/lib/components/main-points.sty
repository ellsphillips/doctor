\usepackage{enumitem}

\newtcolorbox{main-points-wrapper}{
	enhanced,
	breakable,
	rounded corners,
	arc = 4pt,
	boxrule = 0pt,
	colback = clr-bg!95!clr-fg,
	boxsep = 12pt,
}

\newenvironment{main-points}{%
	% ---------------------------------------------------------------------------
	% Boxed section to summarise the main document's points as an enumerated
	% list. Expand the list through the \item macro.
	% 
	% Parameters
	% ----------
	% None.
	% 
	% Demo
	% ----
	% \begin{main-points}
	%     \item Point 1
	%     \item Point 2
	%     \item ...
	%     \item Point n
	% \end{main-points}
	% ---------------------------------------------------------------------------
	\begin{main-points-wrapper}%
		{%
			\vskip.25\baselineskip\Large\bfseries Main points%
			\vskip.5\baselineskip\color{black!50}\hrule%
		}
		\justify%
		\begin{enumerate}[
			label={\bfseries\color{clr-accent}\theenumi.\:},
			labelsep=8pt,
%			labelindent=0.5\parindent,
			itemindent=0pt,
			leftmargin=*,
			listparindent=-\leftmargin,
%			wide,
%			labelwidth=!,
		]%
}{%
		\end{enumerate}%
	\end{main-points-wrapper}%
}